{
  "family": "lks-leantime-app",
  "taskRoleArn": "arn:aws:iam::471112773328:role/LabRole",
  "executionRoleArn": "arn:aws:iam::471112773328:role/LabRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
   "volumes": [
    {
      "efsVolumeConfiguration": {
        "authorizationConfig": {
          "accessPointId": "fsap-0895ac95146bc2583",
          "iam": "DISABLED"
        },
        "fileSystemId": "fs-0533f7b24d4c6b74d",
        "rootDirectory": "/",
        "transitEncryption": "ENABLED"
      },
      "name": "public"
    },
    {
      "efsVolumeConfiguration": {
        "authorizationConfig": {
          "accessPointId": "fsap-0f3cc2461994745b1",
          "iam": "DISABLED"
        },
        "fileSystemId": "fs-0533f7b24d4c6b74d",
        "rootDirectory": "/",
        "transitEncryption": "ENABLED"
      },
      "name": "user"
    },
    {
      "efsVolumeConfiguration": {
        "authorizationConfig": {
          "accessPointId": "fsap-001b6e4e37797926d",
          "iam": "DISABLED"
        },
        "fileSystemId": "fs-0533f7b24d4c6b74d",
        "rootDirectory": "/",
        "transitEncryption": "ENABLED"
      },
      "name": "plug"
    }
  ],

  "placementConstraints": [],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "enableFaultInjection": false,

  "containerDefinitions": [
    {
      "name": "leantime",
      "image": "leantime/leantime:latest",
      "cpu": 0,
      "essential": true,
      "volumesFrom": [],
      "systemControls": [],

      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],

      "secrets": [
        { "name": "LEAN_DB_HOST", "valueFrom": "/lks/db/host" },
        { "name": "LEAN_DB_PORT", "valueFrom": "/lks/db/port" },
        { "name": "LEAN_DB_DATABASE", "valueFrom": "/lks/db/name" },
        { "name": "LEAN_DB_USER", "valueFrom": "/lks/db/username" },
        { "name": "LEAN_DB_PASSWORD", "valueFrom": "/lks/db/password" }
      ],
      "environment": [
        { "name": "APP_URL", "value": "http://lks-oss-lb-854876789.us-east-1.elb.amazonaws.com" },
        { "name": "APP_PORT", "value": "8080" },
        { "name": "SITENAME", "value": "Leantime" },
        { "name": "DEFAULT_TIMEZONE", "value": "Asia/Jakarta" }
      ],

      "mountPoints": [
        {
          "containerPath": "/var/www/html/public/userfiles",
          "readOnly": false,
          "sourceVolume": "public"
        },
        {
          "containerPath": "/var/www/html/userfiles",
          "readOnly": false,
          "sourceVolume": "user"
        },
        {
          "containerPath": "/var/www/html/app/Plugins",
          "readOnly": false,
          "sourceVolume": "plug"
        }
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/lks/leantime-app",
          "awslogs-region": "us-east-1",
          "mode": "non-blocking",
          "awslogs-create-group": "true",
          "max-buffer-size": "25m",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
